<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        tools:context=".sign_In_Activity.ResetPassword" android:id="@+id/resetButton">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
        android:text="@string/reset_email_password"/>
    <EditText
            android:id="@+id/resetEmail"
            android:background="@drawable/rounded_edges_register_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:ems="10"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textColorHint="#494343"
            android:gravity="center"
            android:hint="@string/reset_email_hint"
            android:layout_gravity="center"
            android:inputType="textEmailAddress"
            android:orientation="horizontal" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
        android:orientation="vertical">
        <Button
                android:textStyle="italic"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/sendReset"
                android:background="@drawable/rounded_button"
                android:textColor="@color/white"
                android:text="@string/reset_password"
                android:layout_gravity="center|bottom"
                />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>